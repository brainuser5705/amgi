{
    "manifest_version": 3,
    "name": "amki",
    "version": "1.0",
    "description": "Automatically add notes to your Anki deck",
    "content_scripts": [],
    "permissions": [
        "contextMenus",
        "webRequest",
        "tabs",
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://papago.naver.com/*"
    ],
    "icons": {
        "16": "icons/icon-16.png"
    },
    "background": {
        "service_worker": "context_menu.js",
        "type": "module"
    }
}